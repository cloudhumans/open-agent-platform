apiVersion: v1
kind: Secret
metadata:
  name: open-agent-platform-secret
  namespace: open-agent-platform
type: Opaque
data:
  # IMPORTANT: All values must be base64 encoded
  # To encode a value: echo -n "your-value" | base64
  # To decode a value: echo "encoded-value" | base64 -d
  
  # LangSmith API Key - Get from https://smith.langchain.com/settings
  LANGSMITH_API_KEY: <base64-encoded-langsmith-api-key>
  
  # MCP Tokens - JSON object with access_token, base64 encoded
  # Format: {"access_token": "your-token"}
  MCP_TOKENS: <base64-encoded-mcp-tokens-json>
  
  # Supabase Anon Key (optional)
  NEXT_PUBLIC_SUPABASE_ANON_KEY: <base64-encoded-supabase-anon-key>
  
  # Supabase URL (optional)
  NEXT_PUBLIC_SUPABASE_URL: <base64-encoded-supabase-url>
